{
    "include": ["../src/**/*"],
    "exclude": ["../node_modules"],
    "formatCodeOptions": {
        "tabSize": 4,
        "indentSize": 4
    },
    "compilerOptions": {
        "allowJs": true,
        "lib": ["dom", "esnext"],
        "module": "es2015",
        "target": "ESNEXT",
        "outDir": "../lib",
        "moduleResolution": "node",
        "types": ["node", "long", "jest"],
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "declaration": false,
        "importHelpers": true,
        "noEmitHelpers": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
    }
}

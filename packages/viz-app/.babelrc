// Main used for server side, the client & testing parts
// are included in their webpack config files

{
    "plugins": ["dynamic-import-node"],
    "presets": ["env", {
        "loose": true,
        "modules": false,
        "useBuiltIns": true,
        "exclude": ["transform-regenerator"],
        "targets": {
          "node": 7,
          "browsers": ["last 2 versions"]
        }
    }, "react", "stage-0"]
}

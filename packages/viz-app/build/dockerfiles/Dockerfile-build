FROM graphistry/baseapp

COPY . /viz-app
WORKDIR /viz-app

ARG NPMRC
ARG NODE_ENV
ARG BUILD_TAG
ARG COMMIT_ID
ARG BRANCH_NAME

ENV NODE_ENV $NODE_ENV
ENV COMMIT_ID $COMMIT_ID
ENV BRANCH_NAME $BRANCH_NAME
ENV BUILD_NUMBER ${BUILD_TAG:-dev}

RUN echo $NPMRC >> /root/.npmrc

RUN npm install

CMD ["sh", "-c", "echo 'viz-app says, \"hello, friend!\"'"]
[program:central-app]
command=sudo -u www DEBUG='*' node server.js "{\"ENVIRONMENT\": \"{{ deployment }}\", \"HOSTNAME\": \"{{ hostname }}\" }"
directory=/opt/central
process_name=%(program_name)s
numprocs=1
autostart=true
autorestart=true
stopsignal=TERM
stopwaitsecs=10
stdout_logfile=/var/log/central-app/app.log
redirect_stderr=true